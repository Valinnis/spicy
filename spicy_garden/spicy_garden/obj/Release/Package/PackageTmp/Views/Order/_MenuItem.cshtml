@model spicy_garden.Models.MenuItemView

@using (Html.BeginCollectionItem("Items"))
{
<div class="menuitem left">
	<div class="front">
		<span class="med-1 heavy item-name">@Model.Name</span><br />
		<span class="small item-desc">@Model.Description </span> <br />
	</div>
	<div class="back">
		<span class="med-1 heavy item-name">@Model.Name</span><br />
		<div class="list-container clearfix">
			@Html.HiddenFor(m => m.Id)
			
			@if (Model.HasOptions)
			{
				@Html.DropDownListFor(m => m.OptionSelected, Model.Options, new { @class = "dropdown_menu left hspace space-small option" })
			}
			@if (Model.HasSpicy)
			{
				@Html.EnumDropDownListFor(m => m.SpiceLevel, new { @class = "dropdown_menu left hspace space-small spicelevel" })
			}
			@if (Model.HasSauce)
			{
				@Html.EnumDropDownListFor(m => m.Sauce, new { @class = "dropdown_menu left hspace space-small sauce" })
			}
			
			@*if (Model.HasHalfOrder)*/
			//{
			//	@Html.CheckBoxFor(m => m.IsHalfOrder, new { @class = "half-check left halforder" });
			//	@Html.LabelFor(m => m.IsHalfOrder, new { @class = "left small" });
			//}*@
		</div>
		<span class="quantity-label left small">Quantity:</span>
		@Html.TextBoxFor(p => p.Quantity, new { @class = "quantity-input clear", Value = Model.Quantity, MaxLength = 2 })
		<button class="add-btn link nav-button no-hover light-grey small">Add to Cart</button>
		<span class="medium price-tag">
			$@Model.Price
		</span>
	</div>
</div>
}
